<style>
    /* center the list on the page */
    #itemList {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        /* style the list items */
        #itemList li {
            list-style-type: none;
            margin: 10px;
            padding: 10px;
            cursor: pointer;
        }

            /* highlight the hovered item */
            #itemList li:hover {
                background-color: lightblue;
            }

            /* style the selected item */
            #itemList li.selected {
                font-weight: bold;
            }
</style>

<ul id="itemList">
    <li>Item 1</li>
    <li>Item 2</li>
    <li>Item 3</li>
    <li>Item 4</li>
    <li>Item 5</li>
</ul>

<script>
    // get the list element
    var itemList = document.getElementById("itemList");
    // add event listener to the list
    itemList.addEventListener("click", function (event) {
        // check if the clicked element is a list item
        if (event.target.tagName === "LI") {
            // remove the "selected" class from all list items
            var selectedItems = document.getElementsByClassName("selected");
            for (var i = 0; i < selectedItems.length; i++) {
                selectedItems[i].classList.remove("selected");
            }

            // add the "selected" class to the clicked list item
            event.target.classList.add("selected");

            // show an alert with the content of the clicked list item
            alert(event.target.textContent);
        }
    });
</script>